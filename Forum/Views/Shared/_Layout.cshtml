<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Forum.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Forum</a>
                @if (User?.Identity?.IsAuthenticated ?? false)
                {
                    <div class="float-end w-auto me-2">
                        <span class="justify-content-end align-self-center me-2" style="width: fit-content">
                            Welcome, <strong>@User.Identity.Name</strong>
                        </span>
                        <form asp-controller="Account" asp-action="LogOut" class="d-inline-flex" style="width: fit-content">
                            <input type="submit" value="Log Out" class="btn btn-secondary d-inline-flex" style="width: fit-content" />
                        </form>
                    </div>
                }
                else
                {
                    <div class="float-end">
                        <a asp-controller="Account" asp-action="LogIn" class="btn btn-secondary">Log In</a>
                    </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Forum
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
